#!/usr/bin/env ruby
class UserInterface
  def initialize
    @arr = []
    @player_one = 'tom'
    @player_two = 'kim'
  end

  def to_s
    puts '+---+---+---+'
    puts '| 1 | 2 | 3 |'
    puts '+---+---+---+'
    puts '| 4 | 5 | 6 |'
    puts '+---+---+---+'
    puts '| 7 | 8 | 9 |'
    puts '+---+---+---+'
  end

  puts to_s
  puts 'Welcome to Rubys Tic-Tac-Toe'
  puts 'Enter player 1 name :'
  gets.chomp
  puts 'Enter player 2 name :'
  gets.chomp

  def num_check(move)
    if (1..9).include? move
      true
    else
      p 'Enter a Valid number'
      false
    end
  end

  def players
    turn = 0
    while turn < 8
      if turn.even?
        puts one_output

      else
        puts two_outout

      end
      turn += 1
    end
  end

  def one_output
    puts to_s

    puts "its #{@player_one} turn"

    select1 = false
    while select1 == false
      input = gets.chomp.to_i
      @arr << input if num_check(input)

      select1 = num_check(input)
    end
    puts @arr
  end

  def two_outout
    puts to_s

    puts "its #{@player_two} turn"

    select1 = false
    while select1 == false
      input = gets.chomp.to_i
      @arr << input if num_check(input)

      select1 = num_check(input)
    end
    puts @arr
    puts
  end
end

result = UserInterface.new

puts result.players

puts 'Game over Player 1 wins '
