#!/usr/bin/env ruby
class Display
  def initialize
    @cell = [1, 2, 3, 4, 5, 6, 7, 8, 9]
  end

  def display_board(cell)
    puts "      +---+---+---+
      | #{cell[0]} | #{cell[1]} | #{cell[2]} |
      +---+---+---+
      | #{cell[3]} | #{cell[4]} | #{cell[5]} |
      +---+---+---+
      | #{cell[6]} | #{cell[7]} | #{cell[8]} |
      +---+---+---+"
  end
end

    "Let's play a simple Tic-Tac-Toe game in the console! \n\n"
 
