#!/usr/bin/env ruby

def display_board
  puts '+---+---+---+'
  puts '| 1 | 2 | 3 |'
  puts '+---+---+---+'
  puts '| 4 | 5 | 6 |'
  puts '+---+---+---+'
  puts '| 7 | 8 | 9 |'
  puts '+---+---+---+'
end

puts display_board
puts 'Welcome to Rubys Tic-Tac-Toe'
puts 'Enter player 1 name :'
player_1 = gets.chomp
puts 'Enter player 2 name :'
player_2 = gets.chomp

def players
  turn = 0
  move = []
  while turn < 8

    if turn.even?
      puts display_board
      puts 'its player 1 turn'
      move << gets.chomp

    else
      puts display_board
      puts 'its player 2 turn'
      move << gets.chomp

    end
    turn += 1
  end
end
puts players

