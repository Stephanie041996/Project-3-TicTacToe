#!/usr/bin/env ruby

require_relative '../lib/board'

class UserInterface
  attr_accessor :player_one, :player_two

  def initialize
    @board = Board.new
    @arr = []
    @player_one = 'tom'
    @player_two = 'kim'
    @cell = [1, 2, 3, 4, 5, 6, 7, 8, 9]
  end

  def num_check(move)
    if @arr.include?(move)
      puts 'Enter a Valid number thats not already played'
      false
    elsif !(1..9).include? move
      puts 'Enter a number between 1 and 9'
      false
    else
      @arr << move
      true

    end
  end

  def players
    turn = 0
    while turn < 8
      if turn.even?
        puts one_output

      else
        puts two_outout

      end
      turn += 1
    end
  end

  def one_output
    puts @board.display
    puts " its #{@player_one} turn"

    select1 = false
    while select1 == false
      input = gets.chomp.to_i

      select1 = num_check(input)
    end
    puts @arr
  end

  def two_outout
    puts @board.display

    puts "its #{@player_two} turn"

    select1 = false
    while select1 == false
      input = gets.chomp.to_i

      select1 = num_check(input)
    end
    puts @arr
    puts
  end
end

result = UserInterface.new

puts 'Welcome to Rubys Tic-Tac-Toe'
puts 'Enter player 1 name :'
result.player_one = (gets.chomp)
result.player_one

puts 'Enter player 2 name :'
result.player_two = (gets.chomp)
result.player_two
puts 'lets play! Enter a number to match the position you want to play on the board'
puts result.players

puts 'Game over Player 1 wins '
