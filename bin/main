#!/usr/bin/env ruby

def display_board
  puts '+---+---+---+'
  puts '| 1 | 2 | 3 |'
  puts '+---+---+---+'
  puts '| 4 | 5 | 6 |'
  puts '+---+---+---+'
  puts '| 7 | 8 | 9 |'
  puts '+---+---+---+'
end

puts display_board
puts 'Welcome to Rubys Tic-Tac-Toe'
puts 'Enter player 1 name :'
player_1 = gets.chomp
puts 'Enter player 2 name :'
player_2 = gets.chomp

def validate
  move = []
  input = 0
  3.times do
    puts 'enter number'
    input = gets.chomp
    if move.include?(input)
      puts 'already there'
    else
      move << input
    end
  end
  move
end

def players
  position = validate
  turn = 0
  while turn < 8
    if turn.even? && position
      puts "#{player_1} turn"
    elsif turn == position
      puts "#{player_2} turn"
    end
    turn += 1
  end
end
puts players
puts 'game over you win'

